.row
= form_for @product, multipart: true  do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, {class: "form-control"}
  .form-group
    = f.label :price
    = f.text_field :price, {class: "control-label"}
  .form-group
    = f.label :image
    = f.file_field :image
  .form-group
    = f.label :size,  {class: "control-label"}
    = f.select :size_type, options_for_select([['',''],['Large','Large'],['Medium','Medium'],['Small','Small']])
    
   
   
  .form-group
    = f.label :description
    = f.text_area :description, {class: "form-control",rows:"4"}
  .form-group
    = f.label :brand
    = f.text_field :brand,  {class: "form-control"}
  .form-group
    = f.label :trailers
    = check_box_tag 'product[trailers]', 'trailers'
  .actions
    = f.submit 'Save', class: "btn btn-primary"


